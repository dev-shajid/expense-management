generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // MongoDB connection URL
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      String?  @default("user")
  createdAt DateTime @default(now())
}

model Project {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  details       String?
  budget        Int
  total_income  Int?          @default(0)
  total_expense Int?          @default(0)
  payable       Int?          @default(0)
  receivable    Int?          @default(0)
  status        String?       @default("On Going") // on going -> end
  start         DateTime
  transactions  Transaction[]
  activities    Activity[]
  createdAt     DateTime      @default(now())
}

model Transaction {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  details   String?
  project   Project    @relation(fields: [projectId], references: [id])
  projectId String     @db.ObjectId
  to_from   String?    @default("")
  source    String?
  amount    Int
  type      String // expense - income
  date      DateTime
  createdAt DateTime   @default(now())
  Activity  Activity[]
}

model Withdraw {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  bank_account String
  details      String
  amount       Int
  previous     Int
  remaining    Int
  date         DateTime
  createdAt    DateTime @default(now())
}

model Activity {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId String      @db.ObjectId
  Project       Project?    @relation(fields: [projectId], references: [id])
  projectId     String?     @db.ObjectId
  createdAt     DateTime    @default(now())
}

model Basic {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  total_project   Int      @default(0) // on going -> end
  ongoing_project Int      @default(0) // on going -> end
  end_project     Int      @default(0) // on going -> end
  income          Int      @default(0) // on going -> end
  expanse         Int      @default(0) // on going -> end
  total_income    Int?     @default(0)
  payable         Int?     @default(0)
  receivable      Int?     @default(0)
  createdAt       DateTime @default(now())
}
